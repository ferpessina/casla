<!doctype html>
<html class="no-js" lang="">
  <head>
    <meta charset="utf-8">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Torneo de Fútbol Para Socios del Club Atlético San Lorenzo de Almagro</title>
    <link rel="shortcut icon" href="favicon.ico">
    <!-- Place favicon.ico and apple-touch-icon.png in the root directory -->
     <link rel="stylesheet" href="vendor.css">       
     <link rel="stylesheet" href="style.css">   
     <link rel="stylesheet" type="text/css" href="css/layerslider.css">
    <script src="js/vendor/modernizr.js"></script>    
  </head>
  <body>
    <!--[if lt IE 10]>
      <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
    <![endif]-->
    <div class="wrapper">
      <!-- header -->
      <header class="header-main">
        <div class="header-lower clearfix">
      <%- include ../menu.ejs %>
        </div>  
</header>

       <!-- banner section -->
      <div class="innerbannerwrap">
        <div class="content"></div>
        <div class="innerbannergoleadores">
          <h2 class="bannerHeadline">Agregar Usuario<span></span></h2>
        </div>
      </div>

      <section class="innerpage_all_wrap bg-white"> 
        <div class="container">
			<div class="row">
			<div class="matchSchedule_details row">
                
				 <div class="match_versus-wrap2">
                  <div class="wrap_match-innerdetails">
                    <!-- show any messages that come back with authentication -->
					    <% if (message.length > 0) { %>
					        <div class="alert alert-danger"><%= message %></div>
					    <% } %>

					    <!-- LOGIN FORM -->
					    <form action="/signup" method="post" id="formRegistro">
					        <div class="form-group">
					            <div class="headline01 largepoint1">Email</div>
					            <input type="text" class="form-control" name="email">
					        </div>
					        <div class="form-group">
					            <div class="headline01 largepoint1">Contraseña</div>
					            <input type="password" class="form-control" name="password">
					        </div>
					        <div class="form-group">
					            <div class="headline01 largepoint1">Rol</div>

					            <select name="role" id="roleSelect">
					                <option value="DELEGADO" selected>DELEGADO</option>
                          <option value="PLANILLERO">PLANILLERO</option>
					                <option value="ADMIN">ADMINISTRADOR</option>
					            </select>
					        </div>

					        <button type="submit" class="btn btn-warning btn-lg center-block">Registrar</button>
					    </form>
                    </div>
                  </div>
 				</div>
            </div>
        </div>
		
		
      </section>
      

      <!-- footer -->
      <footer ><!--class="footer-type01"-->
	   <%- include ../footer.ejs %>
      </footer>
    </div>
    

      
    <script src="js/vendor/vendor.js"></script>     
    <script src="js/main.js"></script>
    <script src="js/admin.js"></script>
</body>
</html>
