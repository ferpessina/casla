<!doctype html>
<html class="no-js" lang="">
  <head>
    <meta charset="utf-8">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Torneo de Fútbol Para Socios del Club Atlético San Lorenzo de Almagro</title>
    <link rel="shortcut icon" href="favicon.ico">
    <!-- Place favicon.ico and apple-touch-icon.png in the root directory -->
     <link rel="stylesheet" href="vendor.css">       
     <link rel="stylesheet" href="style.css">   
     <link rel="stylesheet" type="text/css" href="css/layerslider.css">
    <script src="js/vendor/modernizr.js"></script>    
  </head>
  <body>
    <!--[if lt IE 10]>
      <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
    <![endif]-->
    <div class="wrapper">
      <!-- header -->
      <header class="header-main">
        <div class="header-lower clearfix">
      <%- include ../menu.ejs %>
        </div>  
</header>

       <!-- banner section -->
      <div class="innerbannerwrap">
        <div class="content"></div>
        <div class="innerbannergoleadores">
          <h2 class="bannerHeadline">Administración de Torneos<span></span></h2>
        </div>
      </div>

      <% if (resultado) { %>
          <% if (resultado == 200) { %>
                <div class="alert alert-success">El torneo ha sido eliminado con exito</div>
          <% } else { %>
              <div class="alert alert-danger">El partido no se pudo eliminar. Inténtelo nuevamente más tarde</div>
          <% } %>
      <% } %>

      <section class="innerpage_all_wrap bg-white"> 
        <div class="container">
			<div class="row">
			<div class="matchSchedule_details row">
                
				 <div class="match_versus-wrap2">
                  <div class="wrap_match-innerdetails">
                    <ul class="point_table2">
                       <li class="clearfix">
                        <div class="subPoint_table">
                          <div class="headline01 largepoint1">Nombre</div>
                          <div class="headline01 largepoint1">Jugadores por equipo</div>
                          <div class="headline01 largepoint1">Activo</div>
                          <div class="headline01 largepoint1">Equipos</div>
                          <div class="headline01 largepoint1">Canchas</div>
                          <div class="headline01 largepoint1">Divisiones</div>
                          <div class="headline01 largepoint1">Partidos</div>
                          <div class="headline01 largepoint1 row row">
							            <div class="headline01 smallpoint1"><span>ELIMINAR</span></div>
                        </div>
						          </div>
                      </li>

                      <% for(var i=0; i < torneos.length; i++) { %> 
					               <li class="clearfix">
                        <div class="subPoint_table">
                          <div class="headline01 largepoint1"><%= torneos[i].nombre %></div>
                          <div class="headline01 largepoint1"><%= torneos[i].jugadores_por_equipo %></div>
                          <div class="headline01 largepoint1">
                              <% if (torneos[i].activo) { %> Si <% } else { %> No  <% } %>  
                          </div>
                          <div class="headline01 largepoint1"><%= torneos[i].equipos %></div>
                          <div class="headline01 largepoint1"><%= torneos[i].canchas %></div>
                          <div class="headline01 largepoint1"><%= torneos[i].divisiones %></div>
                          <div class="headline01 largepoint1"><%= torneos[i].partidos %></div>
                          <div class="headline01 largepoint1 row row">
            							<div class="headline01 smallpoint1"><span>
            								<form onsubmit="return confirm('Seguro que desea eliminar al torneo <%= torneos[i].nombre %>?');" action="/deleteTorneo" method="post">
            					                <button type="submit">Eliminar</button>
            					                <input type="hidden" value=<%= torneos[i]._id %> name="torneoid"/>
            					            </form>
            							</span></div>
            						  </div>
            						</div>
                      </li>
                      <% } %>

                    </ul>
                    </div>
                  </div>
 				</div>
            </div>
        </div>
		
		
      </section>
    

      <!-- footer -->
      <footer ><!--class="footer-type01"-->
	   <%- include ../footer.ejs %>
      </footer>
    </div>
    

      
    <script src="js/vendor/vendor.js"></script>     
    <script src="js/main.js"></script>
	<script src="js/admin.js"></script> 
        
</body>
</html>
