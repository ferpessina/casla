<!doctype html>
<html class="no-js" lang="">
  <head>
    <meta charset="utf-8">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Torneo de Fútbol Para Socios del Club Atlético San Lorenzo de Almagro</title>
    <link rel="shortcut icon" href="favicon.ico">
    <!-- Place favicon.ico and apple-touch-icon.png in the root directory -->
     <link rel="stylesheet" href="vendor.css">       
     <link rel="stylesheet" href="style.css">   
     <link rel="stylesheet" type="text/css" href="css/layerslider.css">

    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="/resources/demos/style.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
     <script src="js/vendor/modernizr.js"></script>    

  </head>
  <body>
    <!--[if lt IE 10]>
      <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
    <![endif]-->
    <div class="wrapper">
      <!-- header -->
      <header class="header-main">
        <div class="header-lower clearfix">
      <%- include ../menu.ejs %>
        </div>  
</header>

       <!-- banner section -->
      <div class="innerbannerwrap">
        <div class="content"></div>
        <div class="innerbannergoleadores">
          <h2 class="bannerHeadline">Agregar Jugador a <%= equipo.nombre %><span></span></h2>
        </div>
      </div>

      <section class="innerpage_all_wrap bg-white"> 
        <div class="container">
			<div class="row">
			<div class="matchSchedule_details row">
                
				 <div class="match_versus-wrap2">
                  <div class="wrap_match-innerdetails">
                    <!-- show any messages that come back with authentication -->
					    <% if (message.length > 0) { %>
					        <div class="alert alert-danger"><%= message %></div>
					    <% } %>

					    <!-- LOGIN FORM -->
					    <form action="/signup" method="post" id="formRegistro">
					        <div class="form-group">
					            <div class="headline01 largepoint1">Nombre</div>
					            <input type="text" class="form-control" name="nombre">
					        </div>
					        <div class="form-group">
					            <div class="headline01 largepoint1">Apellido</div>
					            <input type="text" class="form-control" name="apellido">
					        </div>
					        <div class="form-group">
					            <div class="headline01 largepoint1">Apodo</div>
					            <input type="text" class="form-control" name="apodo">
					        </div>
					        <div class="form-group">
					            <div class="headline01 largepoint1">Fecha de nacimiento (yyyy-mm-dd)</div>
					            <input type="text" id="fecha_de_nacimiento" class="form-control" name="fecha_de_nacimiento">
					        </div>
					         <div class="form-group">
					            <div class="headline01 largepoint1">DNI</div>
					            <input type="text" class="form-control" name="dni">
					        </div>
					         <div class="form-group">
					            <div class="headline01 largepoint1">Posicion</div>
					            <input type="text" class="form-control" name="posicion">
					        </div>
					         <div class="form-group">
					            <div class="headline01 largepoint1">Numero</div>
					            <input type="text" class="form-control" name="numero">
					        </div>
					         <div class="form-group">
					            <div class="headline01 largepoint1">Email</div>
					            <input type="text" class="form-control" name="email">
					        </div>
					         <div class="form-group">
					            <div class="headline01 largepoint1">Capitan</div>
					            <select name="capitan" id="capitanSelect">
                            		<option value="no" selected>NO</option>
                            		<option value="si" selected>SI</option>
                            	</select>
					        </div>
					        <div class="form-group">
					            <div class="headline01 largepoint1">SubCapitan</div>
					            <select name="subcapitan" id="subcapitanSelect">
                            		<option value="no" selected>NO</option>
                            		<option value="si" selected>SI</option>
                            	</select>
					        </div>

					        <button type="submit" class="btn btn-warning btn-lg center-block">Agregar</button>
					    </form>
                    </div>
                  </div>
 				</div>
            </div>
        </div>
		
		
      </section>
      

      <!-- footer -->
      <footer ><!--class="footer-type01"-->
	   <%- include ../footer.ejs %>
      </footer>
    </div>
        
    <script src="js/main.js"></script>
    <script src="js/admin.js"></script>
    <script src="js/agregarJugador.js"></script>
</body>
</html>
